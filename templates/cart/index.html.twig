{% block title %}
{% endblock %}

{% block body %}
{% include "header.html.twig" %}

<div class="bg-light container p-3 rounded ">
    <h1>Votre panier</h1>

    {% if items | length > 0 %}
    <table class="table">
        <thead>
            <th>Produit</th>
            <th>Prix</th>
            <th>Quantité</th>
            <th>Total</th>
            <th></th>
        </thead>
        <tbody>
            {% for item in items %}
            <tr>
                <td>{{ item.product.name }}</td>
                <td>{{ item.product.price }} €</td>
                <td>{{ item.quantity }} </td>
                <td>{{ item.quantity * item.product.price }} €</td>
                <td class="">
                    <a class="ml-2" href="{{ path('cart_remove', {'id': item.product.id }) }}"><i
                            class="fas fa-minus"></i></a>
                    <a class="ml-2" href="{{ path('cart_add', {'id': item.product.id }) }}"><i
                            class="fas fa-plus"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <td colspan="3">Total :</td>
            <td>{{ total }} €</td>
        </tfoot>
    </table>
    {% include "cart/pay.html.twig" %}

    {% else %}

    <p>Surprise, c'est vide !</p>


    {% endif %}
</div>

{% endblock %}

</body>

</html>
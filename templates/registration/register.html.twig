{% block title %}<title>Creer un compte</title>{% endblock %}


{% block body %}
{% for flashError in app.flashes('verify_email_error') %}
<div class="alert alert-danger" role="alert">{{ flashError }}</div>
{% endfor %}

{% include "header.html.twig" %}
<div class="container text-center bg-light mb-5 rounded p-3">
    <h1>Creer un compte</h1>

    {{ form_start(registrationForm) }}

    <div class="form-group">
        <Label> Renseignez votre email</Label>
        {{ form_widget(registrationForm.email)}}
    </div>
    <div class="form-group">
        <Label> Renseignez votre mot de passe</Label>
        {{ form_widget(registrationForm.plainPassword)}}
    </div>
    <div class="form-group">
        <Label> Veuillez accepter les termes du site</Label>
        {{ form_widget(registrationForm.agreeTerms)}}
    </div>

    <button type="submit" class="btn -lg form-control btn-primary ">S'enregistrer</button>

    {{ form_end(registrationForm) }}

    <a href="app_forgot_password_request"></a>
</div>
{% endblock %}

</body>

</html>